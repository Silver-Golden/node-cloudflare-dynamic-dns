{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "strict": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "docs",
    "examples",
    "lib",
    "node_modules",
    "test"
  ]
}
